  "shortcuts": [
    {
      "name": "Upload Paper",
      "short_name": "Upload",
      "description": "Upload a new paper",
      "url": "/?action=upload",
      "icons": [{ "src": "/icons/upload.png", "sizes": "192x192" }]
    },
    {
      "name": "Generate Paper",
      "short_name": "Generate",
      "description": "Generate a new paper",
      "url": "/?action=generate",
      "icons": [{ "src": "/icons/generate.png", "sizes": "192x192" }]
    }
  ],
  "prefer_related_applications": false,
  "related_applications": [],
  "share_target": {
    "action": "/?share-target",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "description",
      "files": [
        {
          "name": "file",
          "accept": ["application/pdf", ".pdf", ".doc", ".docx"]
        }
      ]
    }
  }
